{
    "manifest_version": 2,
    "name": "即事本",
    "version": "1.0",
    "description": "查看今天需要浏览的网站",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "即事本",
        "default_popup": "popup.html"
    },
    "permissions":[
    "tabs",
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}